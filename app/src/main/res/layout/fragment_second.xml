<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.fragments.SecondFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        app:cardCornerRadius="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/background3"
            android:layout_height="wrap_content">

        <!-- Insertando GIF -->
            <pl.droidsonroids.gif.GifImageView
                android:layout_width="76dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginRight="10dp"
                android:scrollbarSize="2dp"
                android:src="@drawable/yoshi" />

            <TextView
                android:id="@+id/textViewFrag"
                android:layout_width="268dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="@color/verde_azul"
                android:fontFamily="@font/vt32_regular"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="Buscar Personaje"
                android:textColor="@color/black"
                android:textSize="43sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="126dp">


        <!-- BUSCADOR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:src="@drawable/search">
            </ImageView>

            <EditText
                android:id="@+id/txtFilter2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/vt32_regular"
                android:hint="Buscar"
                android:imeOptions="actionSearch"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="#51979FC5"
                android:textSize="18sp" />
        </LinearLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/rvSwipe2"
            android:layout_width="match_parent"
            app:swipeRefreshLayoutProgressSpinnerBackgroundColor="@color/blue"
            android:layout_height="match_parent">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvMarvelChars2"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>

</LinearLayout>